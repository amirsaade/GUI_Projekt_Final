<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GUI_Projekt_Final.Pages.UserDetailPage"
             Title="Detail profilu">

    <VerticalStackLayout Padding="20">
        <Image Source="{Binding ImageUrl}" WidthRequest="200" HeightRequest="200"/>
        <Label Text="{Binding Description}" FontSize="24" HorizontalOptions="Center"/>
        <Label Text="User ID: {Binding UserID}" FontSize="18" HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>
